    <!--app:srcCompat="@drawable/splash" />-->

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marging_first"
        android:visibility="visible"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/img_ekstep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_red_light"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="EkStep"
            android:textStyle="bold"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/img_devcon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/img_ekstep"
            android:src="@drawable/devcon"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_floor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_second"
        android:visibility="visible" />

    <TextView
        android:id="@+id/device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scan_qr_code"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textIsSelectable="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/scan_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_qr_code" />

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!--<android.support.v7.widget.AppCompatImageView-->
