<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_margin="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/treasure_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/treasure"/>

        <TextView
            android:id="@+id/tv_floorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/treasure_icon"
            android:textSize="20sp"
            tools:text="First Floor"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_floorname"
            android:layout_marginLeft="10dp"
            android:textColor="#757575"
            android:layout_toRightOf="@id/treasure_icon"
            tools:text="Devops, Mobility"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>